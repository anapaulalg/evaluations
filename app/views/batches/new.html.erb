<h1>New Batch</h1>

<%= form_for @batch do |f| %>
  <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>
  </div>

  <div class="form-group">
      <%= f.label :start %>
      <div>
          <%= f.date_select :start, class: "form-control" %>
      </div>
  </div>

  <div class="form-group">
      <%= f.label :end %>
      <div>
          <%= f.date_select :end, class: "form-control" %>
      </div>
  </div>

  <div class="form-group">
      <%= f.submit "Create new class", class:"btn btn-primary" %>
  </div>
<% end %>
