<div class="panel panel-primary">
   <div class="panel-heading">
     <h1>Ask a question to:</h1>
   </div>
    <div class="panel-body">
      <div class="form-group">
        <label>Name</label>
        <label class="form-control"><%= @student.name %></label>
      </div>
      <div class="form-group">
        <label>Batch</label>
        <label class="form-control"><%= @student.batch.name %></label>
      </div>
      <div class="form-group">
        <% if @last_evaluation %>
          <br/>
          <label>Last Evaluation: </label>
          <% if @last_evaluation.evaluation == "excellent" %>
            <a href="#" class="btn btn-success"></a>
          <% end %>
          <% if @last_evaluation.evaluation == "good" %>
            <a href="#" class="btn btn-warning"></a>
          <% end %>
          <% if @last_evaluation.evaluation == "bad" %>
            <a href="#" class="btn btn-danger"></a>
          <% end %>
        <% end %>
      </div>
      <br/>
      <div class="form-group">
        <%= image_tag @student.image, class: "medium-image-size" %>
      </div>
    </div>
  </div>
  <div>
    <%= link_to "All Students", batch_path(@student.batch.id), class: "btn btn-default" %>
  </div>
</div>
<br>
