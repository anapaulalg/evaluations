<div class="panel panel-primary">
   <div class="panel-heading">
     <h1><%= @student.name %></h1>
     <h4><%= @student.batch.name %></h4>
     </div>
    <div class="panel-body">
      <%= image_tag @student.image, class: "medium-image-size" %>
      <br/><br/><br/><br/>

      <div class="col-lg-12">
        <p> Today:
          <a href="#" class="btn-xl btn-sq btn-success"></a>
          <a href="#" class="btn-xl btn-sq btn-warning"></a>
          <a href="#" class="btn-xl btn-sq btn-danger"></a>
        </p>
        <br/>
        <p> Remark: </p>

        <div class="form-group">
          <input type="text" class="form-control" placeholder="Remark...">
          <button type="submit" class="btn btn-default">Save</button>
          <button type="submit" class="btn btn-default">Save and next</button>
        </div>
      </div>
      <br/><br/>

      <b> Previous Evaluations: <br/><b>
      <br/>
      <p><% @student.dailyevaluations.each do |dailyevaluation| %></p>
        <p>Day: <%= dailyevaluation.date %></p>
        <% if dailyevaluation.evaluation %>
          <% if dailyevaluation.evaluation == "excellent" %>
            <a href="#" class="btn btn-success"></a>
          <% end %>
          <% if dailyevaluation.evaluation == "good" %>
            <a href="#" class="btn btn-warning"></a>
          <% end %>
          <% if dailyevaluation.evaluation == "bad" %>
            <a href="#" class="btn btn-danger"></a>
          <% end %>
        <% end %>
        <p>Remark: <%= dailyevaluation.remark %></p>
        <button type="button" class="btn btn-default">Edit</button>
        <br/><br/>
      <% end %>
      </div>
    </div>

<%= link_to "All Students", batch_path(@student.batch.id), class: "btn btn-default" %>

<br/>
<hr>
